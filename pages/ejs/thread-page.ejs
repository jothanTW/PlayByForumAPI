<!DOCTYPE html>
<html lang="en">
    <head>
        <% include includes %>
    </head>
    <body onload="adjustAllDateFields(); parseAllBBCode()">
        <% include banner %>
        <div class="thread-title"><%= threaddata.title %></div>
        <div class="thread-breadcrumbs">
            <a href="/">Home</a>
            <% for (let crumb of threaddata.crumbs) { %>
                <div class="forum-page-crumb">&lt;<a href="<%= '/forum/' + crumb.id %>"><%= crumb.title %></a></div>
            <% } %>
        </div>
        <div class="post-box">
            <% for (let post of threaddata.posts) { %>
                <% include post-bar %>
            <% } %>
        </div>
        <% if (locals.username) { %>
            <div class="thread-post-box-container">
                    <% include post-box %>
                <form id="postForm" name="postForm" action="/thread/<%=threaddata.id%>/post/" method="POST">
                    <input type="submit" value="Post">
                </form>
            </div>
        <% } %>
    </body>
</html>